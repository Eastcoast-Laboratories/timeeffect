# TimeEffect Environment Configuration
# Generated example - copy to .env and adjust values

# Database Configuration
# MySQL/MariaDB database server hostname or IP address
DB_HOST=localhost
# Name of the TimeEffect database
DB_DATABASE=timeeffect
# Database username with full access to TimeEffect database
DB_USERNAME=timeeffect
# Database password - use a strong, unique password
DB_PASSWORD=your_secure_password_here
# Table prefix for all TimeEffect tables (default: te_)
DB_PREFIX=te_

# Application Settings
# Environment: production, development, testing
APP_ENV=production
# Debug mode: true shows detailed errors, false hides them (use false in production)
APP_DEBUG=false
# HTTP root path if TimeEffect is in a subdirectory (e.g. /timeeffect)
APP_HTTP_ROOT=
# Absolute filesystem path to TimeEffect installation
APP_ROOT_PATH=/var/www/timeeffect
# Default language: en, de, fr (affects interface language)
APP_LANGUAGE=en

# Formatting Settings
# Decimal point character for numbers (. or ,)
DECIMAL_POINT=.
# Thousands separator for numbers (, or .)
THOUSANDS_SEPARATOR=,
# Default currency code (EUR, USD, GBP, etc.)
CURRENCY=EUR

# Session Configuration
# Session lifetime in seconds (36000 = 10 hours)
SESSION_LIFETIME=36000
# Use secure cookies (true for HTTPS, false for HTTP)
SESSION_SECURE=false

# User Registration Settings
# Allow new user registration (true/false)
ALLOW_REGISTRATION=false
# Require email confirmation for new registrations (true/false)
REGISTRATION_EMAIL_CONFIRM=false
# Allow password recovery via email (true/false)
ALLOW_PASSWORD_RECOVERY=true
# Use secure defaults for new user permissions (true/false)
REGISTRATION_SECURE_DEFAULTS=true
# Default access permissions for new users (Unix-style: rwxr-----)
REGISTRATION_DEFAULT_ACCESS=rwxr-----

# Permission Settings
# Allow users to delete entries (1=yes, 0=no)
ALLOW_DELETE=1

# Performance Settings (optional)
# Maximum number of billed entries to show by default
# DEFAULT_BILLED_ENTRIES_LIMIT=100
# Maximum total efforts to process in statistics
# MAX_EFFORTS_TOTAL=10000

# Security
# Application encryption key - generate with: php -r "echo 'base64:'.base64_encode(random_bytes(32));"
APP_KEY=base64:your-32-character-secret-key-here

# Logging Configuration
# Log level: debug, info, notice, warning, error, critical, alert, emergency (default: info)
LOG_LEVEL=info
# Log channel: single (one file), daily (rotate daily), stack (multiple handlers)
LOG_CHANNEL=single
